s = "abc"

n = len(s)
left, right = 0, n - 1
st = True
cnt = 0
while left <= right:
    if s[left] == s[right]:
        left += 1
        right -= 1
    else:
        if s[left + 1] == s[right] and cnt == 0:
            left += 2
            right -= 1
            cnt += 1
        elif s[left] == s[right - 1] and cnt == 0:
            right -= 2
            left += 1
            cnt += 1
        else:
            st = False
